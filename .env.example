# Job Bot Enhanced Configuration - Environment Variables
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control!

# Personal Information (Required)
PERSONAL_FULL_NAME=Your Full Name
PERSONAL_EMAIL=your.email@example.com
PERSONAL_PHONE=+1234567890
PERSONAL_LINKEDIN_URL=https://linkedin.com/in/yourprofile
PERSONAL_GITHUB_URL=https://github.com/yourusername
PERSONAL_LOCATION=Your City, Country

# Job Platform Credentials
# LinkedIn
LINKEDIN_EMAIL=your.linkedin@email.com
LINKEDIN_PASSWORD=your_linkedin_password

# Indeed
INDEED_EMAIL=your.indeed@email.com
INDEED_PASSWORD=your_indeed_password

# Dice
DICE_EMAIL=your.dice@email.com
DICE_PASSWORD=your_dice_password

# Twitter/X
TWITTER_EMAIL=your.twitter@email.com
TWITTER_PASSWORD=your_twitter_password

# Turing
TURING_EMAIL=your.turing@email.com
TURING_PASSWORD=your_turing_password

# Glassdoor
GLASSDOOR_EMAIL=your.glassdoor@email.com
GLASSDOOR_PASSWORD=your_glassdoor_password

# Monster
MONSTER_EMAIL=your.monster@email.com
MONSTER_PASSWORD=your_monster_password

# ZipRecruiter
ZIPRECRUITER_EMAIL=your.ziprecruiter@email.com
ZIPRECRUITER_PASSWORD=your_ziprecruiter_password

# FlexJobs
FLEXJOBS_EMAIL=your.flexjobs@email.com
FLEXJOBS_PASSWORD=your_flexjobs_password

# Enhanced Email Verification Configuration
# Enable/disable email verification for job applications
EMAIL_VERIFICATION_ENABLED=true

# Email server settings (Auto-detected for Gmail, Outlook, Yahoo)
# Gmail users: Use app password, not regular password
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Your email credentials for verification (uses PERSONAL_EMAIL if not specified)
VERIFICATION_EMAIL=your.email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# Verification timing settings
EMAIL_VERIFICATION_TIMEOUT=300  # 5 minutes timeout
EMAIL_CHECK_INTERVAL=30         # Check every 30 seconds

# Job Search Preferences
JOB_TYPES=DevOps Engineer,Site Reliability Engineer,Cloud Engineer,Infrastructure Engineer,Platform Engineer
JOB_LOCATIONS=Remote,United States,New York,San Francisco,Seattle
EXPERIENCE_LEVEL=mid-level
SALARY_MIN=80000
REMOTE_ONLY=true

# Application Strategy
MAX_APPLICATIONS_PER_PLATFORM=10
MAX_APPLICATIONS_PER_DAY=50
APPLY_STRATEGY=all_matching
RETRY_FAILED_APPLICATIONS=true

# Security Settings
ENABLE_CREDENTIAL_ENCRYPTION=true
CREDENTIAL_ROTATION_DAYS=90
SECURITY_LOGGING=true

# Platform-specific Settings
PLATFORM_RETRY_ATTEMPTS=3
PLATFORM_SWITCH_ON_FAILURE=true
RATE_LIMIT_DELAY=3

# Monitoring and Logging
DETAILED_LOGGING=true
PERFORMANCE_METRICS=true
SCREENSHOT_VERIFICATION=true
LOG_RETENTION_DAYS=30

# Browser Settings
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30
USER_AGENT_ROTATION=true

# Profile Image (place in project root)
PROFILE_IMAGE=profile.jpg

# Advanced Features
ENABLE_CAPTCHA_SOLVER=false
ENABLE_PROXY_ROTATION=false
ENABLE_ANALYTICS_DASHBOARD=false
