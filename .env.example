# Job Bot Configuration - Environment Variables
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control!

# Personal Information
FULL_NAME=Your Full Name
EMAIL=your.email@example.com
PHONE=+1234567890
LINKEDIN_URL=https://linkedin.com/in/yourprofile
GITHUB_URL=https://github.com/yourusername
LOCATION=Your City, Country

# Job Platform Credentials
# Twitter/X
TWITTER_EMAIL=your.twitter@email.com
TWITTER_PASSWORD=your_twitter_password

# Turing
TURING_EMAIL=your.turing@email.com
TURING_PASSWORD=your_turing_password

# Indeed
INDEED_EMAIL=your.indeed@email.com
INDEED_PASSWORD=your_indeed_password

# Dice
DICE_EMAIL=your.dice@email.com
DICE_PASSWORD=your_dice_password

# LinkedIn (if using LinkedIn automation)
LINKEDIN_EMAIL=your.linkedin@email.com
LINKEDIN_PASSWORD=your_linkedin_password

# Glassdoor
GLASSDOOR_EMAIL=your.glassdoor@email.com
GLASSDOOR_PASSWORD=your_glassdoor_password

# Monster
MONSTER_EMAIL=your.monster@email.com
MONSTER_PASSWORD=your_monster_password

# ZipRecruiter
ZIPRECRUITER_EMAIL=your.ziprecruiter@email.com
ZIPRECRUITER_PASSWORD=your_ziprecruiter_password

# FlexJobs
FLEXJOBS_EMAIL=your.flexjobs@email.com
FLEXJOBS_PASSWORD=your_flexjobs_password

# Job Preferences
SALARY_MIN=50000
REMOTE_ONLY=true
EXPERIENCE_LEVEL=entry

# Email Verification Configuration
# Enable/disable email verification for job applications
EMAIL_VERIFICATION_ENABLED=true

# Email server settings (Gmail example)
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Your email credentials for verification
PERSONAL_EMAIL=your.email@gmail.com
EMAIL_APP_PASSWORD=your-app-password

# Verification timing settings
EMAIL_VERIFICATION_TIMEOUT=300  # 5 minutes timeout
EMAIL_CHECK_INTERVAL=30         # Check every 30 seconds

# Profile Image (place in project root)
PROFILE_IMAGE=profile.jpg
